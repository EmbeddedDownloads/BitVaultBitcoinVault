<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/maincolor</item>
        <item name="colorPrimaryDark">@color/maincolor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dropDownListViewStyle">@style/spinnerStyle</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:dropDownListViewStyle">@style/spinnerStyle</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:dropDownListViewStyle">@style/spinnerStyle</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>


    <style name="AppTheme.FullScreeWhite">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:dropDownListViewStyle">@style/spinnerStyle</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowBackground">@drawable/whiteimage</item>
    </style>

    <style name="AppTheme.NoActionBarWhite">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:dropDownListViewStyle">@style/spinnerStyle</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowBackground">@drawable/whiteimage</item>
    </style>

    <style name="spinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:spinnerItemStyle">@color/white</item>
        <item name="android:dividerHeight">.1dp</item>
        <item name="android:listSelector">@color/white</item>
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:divider">@color/line_seprate_color</item>
    </style>

</resources>
